@model ITPE3200ExamProject.ViewModels.LoginViewModel
<div class="container text-center bg">
    <div class="row row-cols-1 justify-content-center">
        <div class="col-8 col-md-5 col-lg-3 border border-2 rounded p-3 bg-white mt-5">
            <img src="\img\Spotshare_Logo.png" alt="" style="width: 100px; height: 100px;">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="fw-bold"></label>
                    <input placeholder="Enter E-mail" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="fw-bold"></label>
                    <input placeholder="Enter Password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-label fw-bold">Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">Login</button>
            </form>
        </div>
    </div>
    <div class="row justify-content-center mt-2">
        <div class="col-8 col-md-5 col-lg-3 border border-2 rounded text-center p-3 bg-white">
            <p>Don't have an account? <a href="./Register">Sign up</a></p>
        </div>
    </div>
</div>