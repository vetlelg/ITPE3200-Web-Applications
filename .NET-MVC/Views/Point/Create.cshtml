@model Point

<!-- Create new point page -->
<div class="container text-center bg">
    <div class="row row-cols-1 justify-content-center">
        <div class="col-12 col-md-8 col-lg-3 border border-2 rounded p-3 bg-white mt-5 fw-bold">
            <h2><u>Create a new marker</u></h2>
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <input id="latitude" type="hidden" asp-for="Latitude" />
                <input id="longitude" type="hidden" asp-for="Longitude" />
                <div class="form-group">
                    <label asp-for="Name">Title</label>
                    <input placeholder="Enter Title" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="5" cols="10" placeholder="Enter Description" asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UploadedImages">Images</label>
                    <input type="file" multiple asp-for="UploadedImages" class="form-control" accept=".jpg, .jpeg, .png">
                </div>
                <button class="btn btn-primary" type="submit">Create</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/create.js"></script>
}